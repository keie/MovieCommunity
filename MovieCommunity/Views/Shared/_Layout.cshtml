<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel=StyleSheet href="~/Resources/css/index/index.css" type="text/css" media=screen>
    
</head>
    <body id="body">
        <div id="ContainerHeader" style="color:yellow">
            <div id="logo">
                <a href='@Url.Action("Index", "Index")'>
                    <img src='@Url.Content("~/Resources/images/logo.png")' width="170px" height="70px"/>
                </a>
            </div>
            <div id="containerItems1" style="color:white">
                <ul>
                    <li>@Html.ActionLink("Contenido", "IndexContent", "Content", null, new { style = "text-decoration:none;color:white" })</li>
                    <li>@Html.ActionLink("Comunidad", "IndexCommunity", "Community", null, new { style = "text-decoration:none;color:white" })</li>
                </ul>
            </div>
            <div id="containerItems2">
                <ul id="ulItems2">
                    <li>@Html.ActionLink("Ingresar", "Index", "Home", null, new { style = "text-decoration:none;color:white" })</li>
                    <li>@Html.ActionLink("Registrarse", "About", "Home", null, new { style = "text-decoration:none;color:white" })</li>
                </ul>
            </div>
        </div>
        <div id="browser">
            <img id="lupaIcon" src="~/Resources/images/icons/lupa.png" height="25px" width="25px;" />
            <input id="inputBrowser" type="text" name="name" value="" style="border:none;width:1500px; height:35px;" placeholder="     Search Your Movie,Serie..." />
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <div id="footer" ">
            <div class="profile">
                <img class="profile" src="https://avatars1.githubusercontent.com/u/31701751?s=460&v=4"  />
            </div>
            <div class="data">
                <p>Kevin Nava</p>
                <p>.NET developer</p><br />
            </div>
            <div id="social">

                <div><img src="~/Resources/images/icons/ln.png" style="display:none" /></div>
                <div><img src="~/Resources/images/icons/ig.png" alt="Alternate Text" /></div>
                <div><img src="~/Resources/images/icons/tw.png" alt="Alternate Text" /></div>
                <div><img src="~/Resources/images/icons/ln.png" alt="Alternate Text" /></div>
            </div>
        </div>
   </body>
</html>